{
  "name": "ts-url-shortener",
  "version": "0.1.0",
  "description": "A simple url shortener implemented with typescript/sequelize",
  "repository": {
    "type": "git",
    "url": "https://github.com/valep27/url-shortener-ts"
  },
  "author": "Valerio Pipolo",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/config": "0.0.34",
    "@types/hashids": "^1.0.30",
    "@types/joi": "^13.0.8",
    "@types/sequelize": "^4.27.17",
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/request": "^2.47.0",
    "@types/sinon": "^4.3.3",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.0.4",
    "nodemon": "^1.13.0",
    "sinon": "^5.0.7",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.2",
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "express": "^4.16.2",
    "hashids": "^1.1.4",
    "joi": "^13.3.0",
    "pg": "^7.4.3",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.37.7"
  }
}
